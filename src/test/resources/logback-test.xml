<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Test ortamı için basit console logging -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Test sırasında sadece WARN ve üzeri logla -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Kendi paketimiz için DEBUG -->
    <logger name="io.mersel.dss.signer.api" level="DEBUG"/>
</configuration>
